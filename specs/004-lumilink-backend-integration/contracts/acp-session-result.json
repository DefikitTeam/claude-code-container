{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lumilink.dev/contracts/acp-session-result.json",
  "title": "ACPSessionResult",
  "type": "object",
  "required": ["stopReason", "usage"],
  "properties": {
    "stopReason": {
      "type": "string",
      "enum": ["completed", "cancelled", "error"]
    },
    "usage": {
      "type": "object",
      "required": ["inputTokens", "outputTokens"],
      "properties": {
        "inputTokens": {"type": "integer", "minimum": 0},
        "outputTokens": {"type": "integer", "minimum": 0}
      }
    },
    "githubAutomation": {
      "$ref": "./github-automation.json#"
    },
    "meta": {
      "type": "object",
      "properties": {
  "githubAutomationVersion": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[0-9A-Za-z.-]+)?$"},
        "workspace": {
          "type": "object",
          "required": ["isEphemeral"],
          "properties": {
            "path": {"type": "string"},
            "isEphemeral": {"type": "boolean"}
          }
        },
        "rollback": {
          "type": "object",
          "properties": {
            "active": {"type": "boolean"},
            "reason": {"type": "string"},
            "trigger": {"type": "string"}
          }
        }
      }
    },
    "diagnostics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "message"],
        "properties": {
          "severity": {"type": "string", "enum": ["debug", "info", "warn", "error"]},
          "message": {"type": "string"},
          "context": {"type": "object"}
        }
      },
      "maxItems": 100
    }
  },
  "additionalProperties": false
}
