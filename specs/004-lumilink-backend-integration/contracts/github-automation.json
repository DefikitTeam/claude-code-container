{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lumilink.dev/contracts/github-automation.json",
  "title": "GitHubAutomationResult",
  "type": "object",
  "required": ["status", "diagnostics"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "skipped", "error"]
    },
    "issue": {
      "type": "object",
      "required": ["id", "number", "url", "title"],
      "properties": {
        "id": {"type": "integer"},
        "number": {"type": "integer"},
        "url": {"type": "string", "format": "uri"},
        "title": {"type": "string"}
      }
    },
    "pullRequest": {
      "type": "object",
      "required": ["number", "url", "branch"],
      "properties": {
        "number": {"type": "integer"},
        "url": {"type": "string", "format": "uri"},
        "branch": {"type": "string"}
      }
    },
    "commit": {
      "type": "object",
      "required": ["sha", "message"],
      "properties": {
        "sha": {"type": "string", "pattern": "^[0-9a-f]{40}$"},
        "message": {"type": "string"}
      }
    },
    "skipReason": {
      "type": "string",
      "enum": [
        "repoBlocked",
        "missingCredential",
        "automationDisabled",
        "rateLimited",
        "workspaceRollback",
        "other"
      ]
    },
    "toastMessage": {
      "type": "string",
      "maxLength": 140
    },
    "transcriptNote": {
      "type": "string",
      "maxLength": 512
    },
    "rollback": {
      "type": "object",
      "required": ["trigger", "threshold"],
      "properties": {
        "trigger": {
          "type": "string",
          "enum": ["autoThreshold", "manualOperator", "manualUser"]
        },
        "threshold": {
          "type": "object",
          "required": ["successRate", "windowMinutes"],
          "properties": {
            "successRate": {"type": "number", "minimum": 0, "maximum": 1},
            "windowMinutes": {"type": "integer", "minimum": 1}
          }
        }
      }
    },
    "diagnostics": {
      "type": "object",
      "required": ["durationMs", "logs"],
      "properties": {
        "durationMs": {"type": "integer", "minimum": 0},
        "attempts": {"type": "integer", "minimum": 1},
        "errorCode": {"type": "string"},
        "logs": {
          "type": "array",
          "items": {"type": "string"},
          "maxItems": 50
        }
      }
    },
    "error": {
      "type": "object",
      "required": ["code", "message", "retryable"],
      "properties": {
        "code": {"type": "string"},
        "message": {"type": "string"},
        "retryable": {"type": "boolean"}
      }
    }
  },
  "allOf": [
    {
      "if": {"properties": {"status": {"const": "success"}}},
      "then": {
        "required": ["issue"],
        "properties": {
          "pullRequest": {"nullable": true},
          "skipReason": {"not": {}},
          "toastMessage": {"not": {}},
          "transcriptNote": {"not": {}},
          "error": {"not": {}},
          "rollback": {"nullable": true}
        }
      }
    },
    {
      "if": {"properties": {"status": {"const": "skipped"}}},
      "then": {
        "required": ["skipReason", "toastMessage", "transcriptNote"],
        "properties": {
          "issue": {"nullable": true},
          "pullRequest": {"nullable": true},
          "commit": {"nullable": true}
        }
      }
    },
    {
      "if": {"properties": {"status": {"const": "error"}}},
      "then": {
        "required": ["error"],
        "properties": {
          "toastMessage": {"nullable": true},
          "transcriptNote": {"nullable": true}
        }
      }
    }
  ]
}
