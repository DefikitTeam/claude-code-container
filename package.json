{
  "name": "claude-code-containers",
  "description": "Automated GitHub issue processing system powered by Claude Code",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "deploy:safe": "./deploy-with-auth-check.sh",
    "deploy:button": "./deploy-button.sh",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "build": "npm run build:container",
    "build:all": "npm install && npm run build:container",
    "build:container": "cd container_src && npm install && npm run build",
    "install:all": "npm install && cd container_src && npm install",
    "test": "vitest run",
    "test:watch": "vitest",
    "prettier": "prettier --write .",
    "postinstall": "echo '📦 Installing container dependencies...' && cd container_src && npm install || echo '⚠️  Container dependencies installation failed'"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "3.6.2",
    "typescript": "5.8.3",
    "vitest": "^2.1.9",
    "wrangler": "^4.34.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.27",
    "@cloudflare/containers": "^0.0.19",
    "@octokit/rest": "^22.0.0",
    "hono": "4.8.2",
    "simple-git": "^3.28.0"
  },
  "cloudflare": {
    "label": "Containers Starter",
    "products": [
      "Workers",
      "Durable Objects",
      "Containers"
    ],
    "categories": [],
    "docs_url": "https://developers.cloudflare.com/containers/",
    "preview_image_url": "https://imagedelivery.net/_yJ02hpOMj_EnGvsU2aygw/5aba1fb7-b937-46fd-fa67-138221082200/public",
    "icon_urls": [
      "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/5ca0ca32-e897-4699-d4c1-6b680512f000/public"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
