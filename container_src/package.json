{
  "name": "claude-code-container",
  "version": "1.0.0",
  "description": "Claude Code container for processing GitHub issues",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest",
    "test:contract": "vitest tests/contract",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "acp:agent": "node dist/main.js --acp",
    "acp:stdio": "node dist/main.js --stdio",
    "acp:example": "node dist/examples/example-agent.js"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.85",
    "@anthropic-ai/sdk": "^0.29.0",
    "@octokit/auth-app": "^7.1.3",
    "@octokit/rest": "^22.0.0",
    "@zed-industries/agent-client-protocol": "^0.3.1",
    "dotenv": "^17.2.1",
    "simple-git": "^3.28.0",
    "uuid": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module"
}